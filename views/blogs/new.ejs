<%- include('../partials/header') %>
    
    <div class="ui main text container segment">
        <div class="ui huge header">New Post</div>
        
        <form class="ui form" action="/blogs" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="Title" required />
            </div>
            
            <div class="field">
                <label>Image URL</label>
                <input type="text" name="blog[image]" placeholder="Image URL" />
            </div>
            
            <div class="field">
                <label>Post Content</label>
                <textarea name="blog[body]" placeholder="Body" required></textarea>
            </div>
            
            <button class="ui green button" type="submit">Submit</button>
        </form>
    </div>
    
<%- include('../partials/footer') %>