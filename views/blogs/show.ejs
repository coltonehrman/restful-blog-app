<%- include('../partials/header') %>

    <div class="ui main text container">
        <h1 class="ui header"><%= blog.title %></h1>
        <p><%= blog.createdAtFormatted %></p>
        
        <a class="ui button" href="/blogs/<%= blog._id %>/edit">Edit</a>
        
        <form class="form inline" action="/blogs/<%= blog._id %>/?_method=DELETE" method="POST">
           <button class="ui red button" type="submit">Delete</button> 
        </form>
    </div>
    
    <div class="ui text blog container">
        <% if (blog.image) { %>
            <img src="<%= blog.image %>" class="ui centered image" />
        <% } %>
        <p><%= blog.body %></p>
    </div>

<%- include('../partials/footer') %>